<%- include('partials/head') %>
<nav class="search-nav">
    <div class="top-nav">
        <img src="/assets/svg/udraw/meddy_single.svg" alt="">
    </div>
    <div class="back">
        <a href="/"><img src="/assets/svg/icon/arrow.svg" alt=""></a>
    </div>

</nav>
<main class="search">
    <header>
        <h1>Medicijn zoeken</h1>
    </header>
    <form class="search-form" action="/search" method="GET">
        <input type="text" name="medicine" id="medicine" placeholder="zoek op medicijnnaam">
        <button type="submit">medicijn zoeken</button>
    </form>
    <% if (locals.medicine){ %>
    <section class="search-list">
        <% for(let i = 0; i < medicine.length; i++){%>
        <article>
            <%= medicine[i].registrationNumber %>
            <h2><a href="/medicine/<%= medicine[i].id %>"><%= medicine[i].name %></a></h2>
        </article>
        <% } %>
    </section>
    <% } %>
    <section class="med-detail" id="<%= medicine.id %> ">
            <span>Medicijn naam</span>
            <h2><%= medicine.name %></h2>
            <span>Actieve ingredienten</span>
            <% if(medicine.activeIngredient) {%>
            <h3><%= medicine.activeIngredient %></h3>
            <% }else{ %>
            <h3>Geen actieve stoffen gevonden</h3>
            <% } %>
            <span>Registratie nummer</span>
            <p><%= medicine.registrationNumber %></p>
        </section>
</main>

<%- include('partials/footer') %>