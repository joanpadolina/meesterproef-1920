            <% if( typeof text == 'string'){%>
            <h3>
                Scan
            </h3>
            <p><%= text  %> </p>

            <% } %>
            <% if(typeof text == 'string' && text.length <= 3 || typeof meds == 'object' && meds.rating < 0.3 ){ %>
            <span><%= text  %> </span>
            <p>geen passende resultaat gevonden</p>

            <% } %>
