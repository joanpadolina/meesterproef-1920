<%- include('../partials/head') %>
<main>
    <div class="upload-container">
        <div>
            <div class="imageplaceholder">
                <article>
                    <h3>
                        scan de foto
                    </h3>
                    <p>
                        blader door je fotoâ€™s om een foto te scannen
                    </p>
                </article>
                <% if(typeof image == 'string' && image){ %>
                    <img src="/image/<%= image %>" alt="" class="show-image">
                <% }else{ %> 
                <img src="https://www.worldloppet.com/wp-content/uploads/2018/10/no-img-placeholder.png" alt="">
                <% } %> 
            </div>
            <div class="form-container">
                <form action="/upload-image-page" method="POST" enctype="multipart/form-data">
                    <input type="file" name="scanmeds" id="file" class="inputfile" />
                    <label for="file">kies een foto</label>
                    <button type="submit" class="upload">scan de foto</button>
                </form>
            </div>
        </div>
    </div>
    <section class="meds-result">
        <div class="loading-state">
            <div>
                <span class="letters">
                    Meddy.
                </span>
                <div class="scan-line"></div>
            </div>
        </div>
        <% if( typeof meds == 'object' && meds){%>

        <%- include('../partials/scanner_results') %>

        <% }else{ %>
            <p>nog geen bestand geselecteerd</p>
        <% } %> 
    </section>
</main>
<%- include('../partials/footer')  %>