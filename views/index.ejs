<%- include('partials/head') %>

<header>
    <div class="desktop-nav">
        <img src="assets/svg/udraw/meddy_logo.svg" alt="">
    </div>
    <section class="intro">
        <h1>Meddy helpt je met het vinden van je medicijn.</h1>
        <p>
            Zoek op naam of scan je medicijndoosje op meer te weten te komen over jouw medicijn.
        </p>
    </section>
    <section class="button-container">
        <a href="/upload-image-page">upload afbeelding</a>
        <a href="/search">zoeken</a>
    </section>
</header>
<main>

    <% if (locals.history) { %>
    <section class="scan-history">
        <h2>Recent gescand</h2>
        <% for(let i = 0; i < history.length; i++) { %>
        <article>
            <h3>
                <a href="/medicine/<%= history[i].id %>"><%= history[i].name %></a>
            </h3>
        </article>
        <% } %>
    </section>
    <% } else{ %>
    <section class="no-history">
        <h2>Geen recente medicijn</h2>
        <img src="assets/svg/udraw/undraw_image_viewer_wxce.svg" alt="">
    </section>

    <% } %>
    </div>
</main>
<%- include('partials/footer')  %>